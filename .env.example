# =============================================================================
# GraceGiver Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Database credentials for PostgreSQL
DB_USER=admin
DB_PASSWORD=CHANGE_ME_use_strong_password_32chars_minimum
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gracegiver

# Full connection string (alternative to individual settings above)
# DATABASE_URL=postgresql://admin:password@localhost:5432/gracegiver

# -----------------------------------------------------------------------------
# Security Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# JWT Secret - MUST be a strong random string (minimum 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_ME_generate_with_crypto_randomBytes

# JWT token expiration (default: 24h)
JWT_EXPIRY=24h

# -----------------------------------------------------------------------------
# Initial Admin Setup (First Run Only)
# -----------------------------------------------------------------------------
# These are only used when the database has no users (fresh installation).
# If INITIAL_ADMIN_PASSWORD is not set, a random password will be generated
# and displayed in the console logs ONCE.

# Username for the initial super admin account
INITIAL_ADMIN_USERNAME=superadmin

# Password for the initial super admin (leave empty to auto-generate)
# Must be at least 12 characters with uppercase, lowercase, digit, and special char
INITIAL_ADMIN_PASSWORD=

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV=development

# -----------------------------------------------------------------------------
# Password Policy (all optional - defaults shown)
# -----------------------------------------------------------------------------
# Minimum password length
PASSWORD_MIN_LENGTH=12

# Character requirements (set to 'false' to disable)
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# Password expiration (OPTIONAL - set to 0 to DISABLE expiration)
# When enabled, users will be prompted to change password after this many days
PASSWORD_EXPIRY_DAYS=0

# Prevent reusing last N passwords
PASSWORD_HISTORY_COUNT=5

# -----------------------------------------------------------------------------
# Account Lockout (defaults shown)
# -----------------------------------------------------------------------------
# Lock account after this many failed login attempts
MAX_LOGIN_ATTEMPTS=5

# Duration of lockout in minutes
LOCKOUT_DURATION_MINUTES=15
